# ============================================
# DATABASE CONFIGURATION (MySQL)
# ============================================
DB_HOST=localhost
DB_PORT=3306
DB_NAME=your_db_name
DB_USER=your_db_user
DB_PASSWORD=your_db_password

# Alternative: Full database URL (overrides above settings if present)
# DATABASE_URL=mysql+pymysql://user:password@host:port/database?charset=utf8mb4

# ============================================
# WHATSAPP BUSINESS API
# ============================================
WHATSAPP_TOKEN=your_whatsapp_token
PHONE_NUMBER_ID=your_phone_number_id
VERIFY_TOKEN=your_verify_token
SECRET_KEY=your_secret_key

# ============================================
# APPLICATION SETTINGS
# ============================================
PORT=yout_port
FLASK_ENV=development
# FLASK_ENV=production  # Uncomment for production

# ============================================
# SECURITY NOTES:
# ============================================
# 1. NEVER commit this file to Git
# 2. Add .env to .gitignore
# 3. Use strong passwords (min 12 characters, mixed case, numbers, symbols)
# 4. Rotate SECRET_KEY regularly
# 5. In production, remove ADMIN_* variables after first setup
# 6. Use environment variables in hosting platform (Heroku, Railway, etc.)

ADMIN_WA_NUMBER=your_admin_wa_number